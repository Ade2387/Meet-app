<div class="background">
  <div class="dashboard-container">
    <div class="profile-container">
      <h3><%= "Welcome to your dashboard #{current_user.first_name}!"%></h3>

      <div>
        <%= cl_image_tag current_user.photo.key, crop: :thumb, gravity: :face %>
      </div>
      <br>
      <div class="profile-text">
        <p><%= "Username: #{current_user.username}" %></p>
        <p><%= "Email: #{current_user.email}" %></p>
        <p><%= "Member since: #{current_user.created_at}" %></p>
        <a href="/users/edit" class="btn btn-primary">Edit profile</a>
      </div>
    </div>


  <div class="">
    <%= month_calendar(events: @meetings, attribute: :start_time, end_attribute: :end_time) do |date, meetings| %>
      <%= date %>

      <% meetings.each do |meeting| %>
        <div>
          <%= link_to meeting.name, event_path(meeting) %>
        </div>
      <% end %>
    <% end %>
  </div>
  </div>
</div>
