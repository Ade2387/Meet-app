<div class="background">
  <div class="dashboard-container">
    <div class="profile-container">
      <div class="top-profile-container">
        <div class="avatar-picture">
         <%= cl_image_tag current_user.photo.key, crop: :thumb, gravity: :face %>
        </div>
        <div class="profile-command">
          <div class="profile-text">
          <p><%= "Email: #{current_user.email}" %></p>
          <p><%= "Member since: #{current_user.created_at}" %></p>
          <a href="/users/edit" class="btn btn-primary">Edit profile</a>
          </div>
          <div class="create-event-btn">
            <%= link_to "New Event", new_user_event_path(current_user), class: 'btn btn-outline-warning' %>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <%= month_calendar(events: @meetings, attribute: :start_time, end_attribute: :end_time) do |date, meetings| %>
        <%= date %>

        <% meetings.each do |meeting| %>
          <div class="meeting">
            <p><%= link_to meeting.name, event_path(meeting) %></p>
            <small><%= meeting.time unless meeting.multi_days? %></small>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
