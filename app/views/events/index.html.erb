<div class=main-meetings-wrapper>
  <div class=mymeetings-container>
    <H2>My meetings:</H2>
    <ul>
      <% if current_user.events.length != 0 %>
      <% current_user.events.each do |event| %>
      <li><div class="card-container">
  <div class="dates-links-wrapper">
    <h3 class="dates">
      start: <%= event.start_time.to_datetime.strftime('%d %B at %H:%M') %>
      <br>
      end: <%= event.end_time.to_datetime.strftime('%d %B at %H:%M') %>
    </h3>
  </div>

  <div class="card-contents">
    <div class="title-discription">
      <H1><%= event.name %></H1>
      <p> <%= event.description %>  </p>
    </div>

    <div class=created-attended-by>
      <h2>created by:</h2> <%= event.user.first_name %>

      <h2>invitees:</h2> <% event.user_events.each do |user| %>
          <%= user.user.first_name %>
        <% end %>
    </div>
    <div class="dates-links-wrapper">
      <div class="card-links">
      <div>
        <%= link_to edit_user_event_path(current_user, event) do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
          </svg>
      <% end %>
      </div>
        <%= link_to event_slots_path(event) do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-calendar-plus" viewBox="0 0 16 16">
            <path d="M8 7a.5.5 0 0 1 .5.5V9H10a.5.5 0 0 1 0 1H8.5v1.5a.5.5 0 0 1-1 0V10H6a.5.5 0 0 1 0-1h1.5V7.5A.5.5 0 0 1 8 7z"/>
            <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"/>
          </svg>
        <% end %>
        <%= link_to event_path(event),
          method: :delete,
          data: { confirm: "Are you sure?" } do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
              <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
              <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
            </svg>
          <% end %>
      </div>
    </div>
  </div>
</div>
      </li>
      <% end %>
      <% else %>
        <%= "You haven't created any meeting yet" %>
      <% end %>
    </ul>
  </div>

  <div class= invitemeeting-container>
    <H2>Meetings I've been invited to</H2>
    <ul>
      <% @events.each do |event| %>
      <% event.user_events.each do |user_event| %>
      <% if user_event.user == current_user %>
      <li>Meeting: <%= event.name %>
          - description: <%= event.description %>
          - duration: <%= event.duration / 60  %> min
          - start: <%= event.start_time %>
          - end: <%= event.end_time %>
          - created by: <%= event.user.first_name %></li>
          - attendees: <% event.user_events.each do |user| %>
          <%= user.user.first_name %>
          <% end %>
          <% end %>
          <% end %>
          <% end %>
    </ul>
    <div class="btn btn-primary"><%= link_to "New Event", new_user_event_path(current_user)%>
    </div>
  </div>
</div>
