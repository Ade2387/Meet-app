<div class="background">
  <div class="dashboard-container">
    <div class="navigation" data-controller="sidebar" data-action="click->sidebar#active">
      <div class="avatar-picture">
        <% if current_user.photo.attached? %>
          <%= cl_image_tag current_user.photo.key, crop: :thumb, gravity: :face %>
        <% else %>
          <%= image_tag "avatar_default.png" %>
        <% end %>
      </div>
      <div class="text">
        <h4><%= current_user.first_name %> <%= current_user.last_name %></h4>
        <p><%= "My team: #{current_user.company}" %></p>
      </div>
      <ul>
        <li class="list" data-sidebar-target="list">
          <b></b>
          <b></b>
            <%= link_to "/dashboard" do %>
                <span class="icon">
                  <ion-icon name="home-outline"></ion-icon>
                </span>
                <span class="title">Calendar</span>
            <% end %>
        </li>
        <li class="list" data-sidebar-target="list">
          <b></b>
          <b></b>
            <%= link_to "/events" do %>
                <span class="icon">
                  <ion-icon name="time-outline"></ion-icon>
                </span>
                <span class="title">My meetings</span>
            <% end %>
        </li>
        <li class="list" data-sidebar-target="list">
          <b></b>
          <b></b>
            <%= link_to "/users/edit" do %>
                <span class="icon">
                  <ion-icon name="settings-outline"></ion-icon>
                </span>
                <span class="title">Setting</span>
            <% end %>
        </li>
        <li class="list" data-sidebar-target="list">
          <b></b>
          <b></b>
            <%= link_to destroy_user_session_path, method: :delete do %>
                <span class="icon">
                  <ion-icon name="log-out-outline"></ion-icon>
                </span>
                <span class="title">Log out</span>
            <% end %>
        </li>
      </ul>
    </div>
    <div class=index-container>
        <H1>Index Event page</H1> <br>
          <div class=mymeetings-container>
            <H2>Meetings I have created</H2> <br>
            <ul>
              <% if current_user.events.length != 0 %>
                <% current_user.events.each do |event| %>
                  <li>Meeting: <%= event.name %>
                      - description: <%= event.description %>
                      - duration: <%= event.duration / 60  %> min
                      - start: <%= event.start_time %>
                      - end: <%= event.end_time %>
                      - created by: <%= event.user.first_name %>
                      - attendees: <% event.user_events.each do |user| %>
                      <%= user.user.first_name %>
                      <% end %>
                      <%= link_to "Edit", edit_user_event_path(current_user, event) %>
                      <%= link_to "Delete", event_path(event),
                        method: :delete,
                        data: { confirm: "Are you sure?" } %>
                      <%= link_to "Available slots for this meeting", event_slots_path(event) %></li>
                <% end %>
              <% else %>
                <%= "You haven't created any meeting yet" %>
              <% end %>
            </ul>
            <br>
            <div class= invitemeeting-container> <br>
              <H2>Meetings I've been invited to</H2>
              <ul>
                <% @events.each do |event| %>
                  <% event.user_events.each do |user_event| %>
                    <% if user_event.user == current_user %>
                      <li>Meeting: <%= event.name %>
                        - description: <%= event.description %>
                        - duration: <%= event.duration / 60  %> min
                        - start: <%= event.start_time %>
                        - end: <%= event.end_time %>
                        - created by: <%= event.user.first_name %></li>
                        - attendees: <% event.user_events.each do |user| %>
                        <%= user.user.first_name %>
                        <% end %>
                    <% end %>
                  <% end %>
                <% end %>
                </ul> <br> <br>

                <div class="btn btn-primary"><%= link_to "New Event", new_user_event_path(current_user)%>
                </div>

            </div>
      </div>
    </div>
  </div>
</div>
